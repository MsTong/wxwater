.waters {
  border-bottom: 1px solid #c8c8cd;
  width: 100%;
}
.waters-top {
  width: 100%;
}
.waters-top-noaddress {
  padding-left: 15px;
  font-size:16px;
  font-family:'PingFangSC-Semibold';
   line-height: 20px;
  height: 20px;
  color: #19b161;
}
.waters-top-address {
font-size:16px;
font-family:'PingFangSC-Semibold';
font-weight:600;
color:rgba(51,51,51,1);
line-height:20px;
padding-left: 15px;
position: relative;
}
.waters-top-address-name text:first-child {
  padding-right: 10px;
}
.waters-top-address-address {
  font-size:12px;
  font-family:'PingFangSC-Regula'r;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-top: 10px;
}
.waters-top-address-enter {
  position: absolute;
  right: 15px;
  top: 50%;
  width:15px;
  height: 15px;
  transform:translate(0,-50%);
}
waters-top-address
.icon-item{
    display: block;
    padding: 16px 0;
    width: 33.33%;
    float: left;
    text-align: center;
}
.icon-item-name{
    font-size: 10px;
}
.waters-top-line {
  width: 100%;
  height: 3px;
}
.waters-content {
  width: 92%;
  margin: 10px auto;
  overflow: hidden;
  height: 120px;
  position: relative;
}
.waters-content-left {
  float: left;
  width: 60%;
  overflow: hidden;
}
.waters-content-left image {
  width: 40%;
  height: 120px;
  float: left;
}
.waters-content-left-info {
  width: 56%;
  float: left;
  padding-left: 4%;
  height: 120px;
}
.waters-content-right {
  width: 40%;
  float: left;
  height: 32px;
   position: absolute;
  bottom: 0;
  right: 0;
}
.waters-content-right-input {
  padding-left: 16px;
}
.waters-footer {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}
